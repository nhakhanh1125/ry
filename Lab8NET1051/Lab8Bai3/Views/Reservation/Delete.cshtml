@model Lab8Bai3.Models.Reservation

@{
    ViewData["Title"] = "Xóa đặt chỗ";
}

<h2>Bạn có chắc chắn muốn xóa?</h2>

<div>
    <p><strong>Tên:</strong> @Model.Name</p>
    <p><strong>Điểm đi:</strong> @Model.StartLocation</p>
    <p><strong>Điểm đến:</strong> @Model.EndLocation</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
