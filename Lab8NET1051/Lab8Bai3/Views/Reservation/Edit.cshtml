@model Lab8Bai3.Models.Reservation

@{
    ViewData["Title"] = "Chỉnh sửa đặt chỗ";
}

<h2>Chỉnh sửa đặt chỗ</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="StartLocation"></label>
        <input asp-for="StartLocation" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="EndLocation"></label>
        <input asp-for="EndLocation" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
