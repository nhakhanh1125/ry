@model Lab8Bai3.Models.Reservation

@{
    ViewData["Title"] = "Chi tiết đặt chỗ";
}

<h2>Chi tiết đặt chỗ</h2>

<div>
    <p><strong>Tên:</strong> @Model.Name</p>
    <p><strong>Điểm đi:</strong> @Model.StartLocation</p>
    <p><strong>Điểm đến:</strong> @Model.EndLocation</p>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Chỉnh sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
</p>
