@model ProductClient.Models.Product

@{
    ViewData["Title"] = "Xóa sản phẩm";
}

<h2 class="text-danger">Bạn có chắc chắn muốn xóa sản phẩm này không?</h2>

<div class="card">
    <div class="card-body">
        <h4>ID: @Model.Id</h4>
        <h4>Tên sản phẩm: @Model.Name</h4>
        <h4>Giá: @Model.Price VNĐ</h4>
        <h4>Mô tả: @Model.Description</h4>
    </div>
    <div class="card-footer">
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Xóa</button>
            <a asp-action="Index" class="btn btn-secondary">Hủy</a>
        </form>
    </div>
</div>
