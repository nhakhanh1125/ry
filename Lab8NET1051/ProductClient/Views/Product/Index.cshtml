@model List<ProductClient.Models.Product>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
}

<h2 class="text-center mt-3">Danh sách sản phẩm</h2>
<a asp-action="Create" class="btn btn-success mb-3">+ Thêm sản phẩm mới</a>

<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Tên sản phẩm</th>
            <th>Giá</th>
            <th>Mô tả</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>$@product.Price</td>
                <td>@product.Description</td>
                <td>
                    <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary btn-sm">Xem</a>
                    <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa?')">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
