@model ProductClient.Models.Product

@{
    ViewData["Title"] = "Xóa sản phẩm";
}

<h2>Bạn có chắc chắn muốn xóa sản phẩm này?</h2>

<p><strong>ID:</strong> @Model.Id</p>
<p><strong>Tên:</strong> @Model.Name</p>
<p><strong>Giá:</strong> @Model.Price</p>
<p><strong>Mô tả:</strong> @Model.Description</p>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a class="btn btn-secondary" href="@Url.Action("Index")">Hủy</a>
</form>
